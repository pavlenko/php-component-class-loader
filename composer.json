{
  "config": {
    "sort-packages": true
  },
  "name": "pe/component-class-loader",
  "description": "Component allows to autoload classes via static class map or PSR-0/PSR-4 compliant structure",
  "keywords": ["psr-0", "psr-4", "class loader"],
  "license": "MIT",
  "authors": [
    {
      "name": "Pavlenko Eugeniy",
      "email": "pavlenko.obs@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0"
  },
  "autoload": {
    "psr-4": {
      "PE\\Component\\ClassLoader\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PETest\\Component\\ClassLoader\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
